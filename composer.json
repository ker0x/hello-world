{
  "name": "kerox/hello-world",
  "type": "library",
  "description": "A PHP library to say Hello to the world",
  "keywords": [
    "hello world"
  ],
  "homepage": "https://github.com/ker0x/hello-world",
  "license": "MIT",
  "authors": [
    {
      "name": "Romain Monteil",
      "email": "monteil.romain@gmail.fr",
      "homepage": "http://kerox.fr",
      "role": "Author"
    }
  ],
  "support": {
    "issues": "https://github.com/ker0x/hello-world/issues",
    "source": "https://github.com/ker0x/hello-world"
  },
  "require": {
    "php": ">=7.1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.2",
    "codacy/coverage": "^1.4",
    "friendsofphp/php-cs-fixer": "^2.12"
  },
  "autoload": {
    "psr-4": {
      "Kerox\\HelloWorld\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Kerox\\HelloWorld\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": "phpunit",
    "csfix": "php-cs-fixer fix --diff --verbose --config=.php_cs"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
